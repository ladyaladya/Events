@using Events.UI.Helpers
@using System.Net
@using Microsoft.AspNetCore.WebUtilities

@model EventTable

@{
    ViewData["Title"] = "Upcoming Events";
}

<div class="d-flex justify-content-between align-items-center">
    <h2 class="h2 py-3 mb-0">Upcoming Events</h2>
    <a asp-area="" asp-controller="Home" asp-action="NewEvent" class="btn btn-primary"> Create new event </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Category</th>
                <th>Name</th>
                <th>Description</th>
                <th>Place</th>
                <th>Time</th>
                <th>Image</th>
                <th>Additional Info</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Events.Any())
            {
                @foreach (var e in Model.Events)
                {
                    <tr>
                        <td>@e.Category</td>
                        <td>@e.Name</td>
                        <td>@e.Description</td>
                        <td>@e.Place</td>
                        <td>@e.Time</td>
                        <td> <img src='@(string.IsNullOrEmpty(e.ImagePath) ? "../img/no-image.jpg" : e.ImagePath)' alt="img" class="img-thumbnail float-left m-2" style="max-width: 150px; height: auto;"> </td>
                        <td>@e.AdditionalInfo</td>
                        <td>
                            <div class="d-flex justify-content-center align-items-center">
                                <a href="@Url.Action("Event", "Home", new { id = e.Id })" class="btn btn-sm btn-primary m-2">Edit</a>
                                <form asp-action="Delete" asp-route-id="@e.Id" onsubmit="return confirm('Are you sure you want to delete this event?');" style="display: inline-block;">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else {
                <tr>
                    There are no upcoming events. Create one by clicking "Create new event" button.
                </tr>
            }
            
        </tbody>
    </table>

    <div>
        <strong>
            @Model.StartIndex-@Model.EndIndex
        </strong>
            of
        <strong>
            @Model.AllEventsCount
        </strong>

        <div class="mt-2">
            @if (Model.Events.Any())
            {
                <pager class="pagination pagination-sm"
                       asp-page-size="@Constants.EventsPerPage"
                       asp-page-index="@Model.PageIndex"
                       asp-total-count="@Model.AllEventsCount"
                       asp-action="EventTable"
                       asp-controller="Home">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.PageIndex <= 1 ? "disabled" : "")">
                                <a class="page-link" href="@Url.ActionLink("EventTable", "Home" , Model.PaginationTableFilters.PreviousPageFilter)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            @foreach (var pageIndex in Model.Pagination.PageNumbersArray)
                            {
                                <li class="page-item @(pageIndex == Model.PageIndex ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("EventTable", "Home", Model.PaginationTableFilters.PageNumbersFilterArray[pageIndex - 1])">@pageIndex</a>
                                </li>
                            }

                            <li class="page-item @(Model.PageIndex >= Model.PageCount ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("EventTable", "Home", Model.PaginationTableFilters.NextPageFilter)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </pager>
            }
        </div>

    </div>
</div>






